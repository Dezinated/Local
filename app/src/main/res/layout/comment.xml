<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/post_background"
    android:minHeight="200dp"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/postSectionOne"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commentIcon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="0"
            android:background="@drawable/author_icon"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/postText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/postRatings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/upVoteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/upVote"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/downVoteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/downVote"
                app:srcCompat="@android:drawable/arrow_down_float" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/postSectionTwo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reportButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/report"
            android:textColorLink="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>